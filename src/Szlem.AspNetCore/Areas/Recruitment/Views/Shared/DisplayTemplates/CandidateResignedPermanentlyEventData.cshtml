@model Szlem.Recruitment.Enrollments.GetEnrollmentDetails.CandidateResignedPermanentlyEventData
@using Szlem.AspNetCore.Views

<div class="card border-danger">
    <div class="card-header alert-danger"><i class="fas fa-ban"></i> Kandydat trwale zrezygnował</div>
    <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(model => model.DateTime.LocalDateTime)</h6>
        <div class="card-text">
            <dl class="row">
                @Html.DlFullRowOrEmptyValue(model => model.RecordingUser, "brak")
                @Html.DlFullRowOrEmptyValue(model => model.ResignationReason, "nie podano")
                @Html.DlFullRowOrEmptyValue(model => model.AdditionalNotes, "brak")
            </dl>
        </div>
    </div>
</div>